<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:id="@+id/container"
            android:layout_margin="10dp">
        <androidx.appcompat.widget.AppCompatTextView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Job ID:"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_jobid_label"/>
        <androidx.appcompat.widget.AppCompatTextView
                app:layout_constraintLeft_toRightOf="@+id/text_jobid_label"
                app:layout_constraintTop_toTopOf="@+id/text_jobid_label"
                android:layout_marginLeft="10dp"
                android:text="1234567"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_jobid"/>

        <androidx.appcompat.widget.AppCompatTextView
                app:layout_constraintRight_toLeftOf="@+id/text_jobname"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:text="Job Name:"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_jobname_label"/>
        <androidx.appcompat.widget.AppCompatTextView
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/text_jobname_label"
                android:layout_marginLeft="10dp"
                android:text="1234567"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_jobname"/>


        <androidx.appcompat.widget.AppCompatTextView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_jobid_label"
                android:text="Job State:"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_jobstate_label"/>

        <androidx.appcompat.widget.AppCompatTextView
                app:layout_constraintLeft_toRightOf="@+id/text_jobstate_label"
                app:layout_constraintTop_toTopOf="@+id/text_jobstate_label"
                android:layout_marginLeft="10dp"
                android:text="Enqueued"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_jobstate"/>

        <androidx.appcompat.widget.AppCompatTextView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_jobstate_label"
                android:text="Keys :"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_jobkeys_label"/>

        <androidx.appcompat.widget.AppCompatTextView
                app:layout_constraintLeft_toRightOf="@+id/text_jobkeys_label"
                app:layout_constraintTop_toTopOf="@+id/text_jobkeys_label"
                android:layout_marginLeft="10dp"
                android:text="aasdasdsd, asdasd , asd "
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_job_keys"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
